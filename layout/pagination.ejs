<hr class="post-list__divider " />

<nav class="pagination" role="navigation">
    <% if (page.prev){ %>
    	<% if (page.prev <= 1) { %>
          <a class="newer-posts pagination__newer btn btn-small btn-tertiary" href="/<%- page.prev_link %>#blog">&larr; 最近</a>
        <% } else { %>
          <a class="newer-posts pagination__newer btn btn-small btn-tertiary" href="/<%- page.prev_link %>#blog">&larr; 最近</a>
        <% } %>
    <% } %>

    <span class="pagination__page-number">Page <%- page.current || 1 %> of <%- page.total || 1%></span>
    
    <% if (page.next){ %>
        <a class="older-posts pagination__older btn btn-small btn-tertiary" href="/<%- page.next_link %>#blog">更早 &rarr;</a>
    <% } %>
</nav>
